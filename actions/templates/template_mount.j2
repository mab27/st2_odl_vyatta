<node xmlns="urn:TBD:params:xml:ns:yang:network-topology">
	<node-id>{{ mountName }}</node-id>
	<host xmlns="urn:opendaylight:netconf-node-topology">{{ deviceIP }}</host>
	<port xmlns="urn:opendaylight:netconf-node-topology">{{ deviceSshPort }}</port>
	<username xmlns="urn:opendaylight:netconf-node-topology">{{ deviceUser }}</username>
	<password xmlns="urn:opendaylight:netconf-node-topology">{{ devicePW }}</password>
	<tcp-only xmlns="urn:opendaylight:netconf-node-topology">false</tcp-only>
	<keepalive-delay xmlns="urn:opendaylight:netconf-node-topology">0</keepalive-delay>
</node>